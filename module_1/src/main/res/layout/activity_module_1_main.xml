<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Module1MainActivity">

    <TextView
        android:id="@+id/tv_module_1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="Module1 MainActivity"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/module1_btn01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_module_1_title"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:textSize="17dp"
        android:text="gotoModule2MainActivity"
        android:textAllCaps="false"
        />
</RelativeLayout>